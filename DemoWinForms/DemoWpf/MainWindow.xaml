<Window
    x:Class="DemoWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DemoWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Sistema de Gestión de Tareas"
    Width="900"
    Height="650"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
   <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
         <RowDefinition Height="*" />
        </Grid.RowDefinitions>

 <!-- Menu -->
        <Menu Grid.Row="0" Padding="5">
            <MenuItem Header="Archivo">
           <MenuItem Header="Salir" Click="MenuItem_Exit_Click" />
  </MenuItem>
      <MenuItem Header="Gestion">
      <MenuItem Header="Etiquetas" Click="MenuItem_Etiquetas_Click" />
            </MenuItem>
            <MenuItem Header="Ver">
    <MenuItem Header="Cambiar Tema" Click="MenuItem_ToggleTheme_Click" />
            </MenuItem>
    </Menu>

        <!-- Contenido principal -->
     <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
    <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
     <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
              Margin="0,0,0,20"
    FontSize="28"
                FontWeight="Bold"
      Text="Sistema de Gestión de Tareas" />

    <StackPanel
      Grid.Row="1"
                Margin="0,0,0,20"
              HorizontalAlignment="Left"
            Orientation="Horizontal">
       <Button
         Width="160"
    Height="40"
      Margin="0,0,10,0"
         Command="{Binding OpenTareasCommand}"
     Content="Ver Todas las Tareas"
   FontSize="14" />
     <Button
       Width="140"
           Height="40"
  Command="{Binding OpenNewTareaCommand}"
  Content="Nueva Tarea"
     FontSize="14" />
            </StackPanel>

       <Border
    Grid.Row="2"
Padding="20"
        Background="#F5F5F5"
                BorderBrush="#CCCCCC"
        BorderThickness="1"
   CornerRadius="5">
                <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock
           Margin="0,0,0,20"
    FontSize="20"
       FontWeight="SemiBold"
 Text="Estadísticas de Tareas" />

           <Grid Width="600">
    <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
         </Grid.ColumnDefinitions>

      <Border
         Grid.Column="0"
        Margin="5"
       Padding="15"
        Background="White"
         BorderBrush="#2196F3"
        BorderThickness="2"
 CornerRadius="5">
         <StackPanel HorizontalAlignment="Center">
   <TextBlock
           FontSize="36"
        FontWeight="Bold"
      Foreground="#2196F3"
   Text="{Binding Estadisticas.TotalTareas}" />
     <TextBlock
                     FontSize="14"
      Text="Total de Tareas"
           TextAlignment="Center" />
    </StackPanel>
</Border>

    <Border
      Grid.Column="1"
       Margin="5"
         Padding="15"
     Background="White"
          BorderBrush="#FF9800"
             BorderThickness="2"
       CornerRadius="5">
              <StackPanel HorizontalAlignment="Center">
               <TextBlock
FontSize="36"
FontWeight="Bold"
           Foreground="#FF9800"
             Text="{Binding Estadisticas.TareasPendientes}" />
   <TextBlock
           FontSize="14"
 Text="Pendientes"
 TextAlignment="Center" />
         </StackPanel>
    </Border>

        <Border
      Grid.Column="2"
         Margin="5"
            Padding="15"
     Background="White"
            BorderBrush="#4CAF50"
      BorderThickness="2"
             CornerRadius="5">
        <StackPanel HorizontalAlignment="Center">
    <TextBlock
    FontSize="36"
  FontWeight="Bold"
        Foreground="#4CAF50"
    Text="{Binding Estadisticas.TareasCompletadas}" />
  <TextBlock
      FontSize="14"
   Text="Completadas"
          TextAlignment="Center" />
      </StackPanel>
 </Border>
          </Grid>

    <Button
                Width="150"
          Height="35"
     Margin="0,20,0,0"
               Command="{Binding LoadEstadisticasCommand}"
       Content="Actualizar"
   FontSize="14" />
   </StackPanel>

           <Grid Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="#80FFFFFF" />
  <ProgressBar
      Width="200"
             Height="20"
        IsIndeterminate="True" />
    </Grid>
                </Grid>
          </Border>

            <TextBlock
          Grid.Row="3"
           Margin="0,20,0,0"
                HorizontalAlignment="Center"
  FontSize="12"
     Foreground="#666666"
         Text="Sistema de Gestión de Tareas - WPF + .NET 8" />
  </Grid>
    </Grid>
</Window>
